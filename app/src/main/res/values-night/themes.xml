<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nawa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_50</item>
        <item name="colorPrimaryDark">@color/teal_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>

        <item name="colorAccent">@color/purple_100</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowBackground">?attr/colorOnSurface</item>

        <!-- Font family. -->
        <item name="fontFamily">@font/opensans_font</item>
    </style>
</resources>